<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_bg"
    android:paddingLeft="@dimen/padding"
    android:paddingTop="@dimen/padding"
    android:paddingRight="@dimen/padding">

    <TextView
        android:id="@+id/tvTag"
        style="@style/text_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/theme"
        tools:text="" />

    <TextView
        android:id="@+id/tvAuthor"
        style="@style/text_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tvTag"
        tools:text="鸿洋" />

    <TextView
        android:id="@+id/tvDate"
        style="@style/text_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        tools:text="2020-03-08" />

    <TextView
        android:id="@+id/tvTitle"
        style="@style/text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDate"
        android:layout_marginTop="@dimen/qb_px_10"
        android:maxLines="3"
        tools:text="分布式协调工具之zookeeper使用篇-Zookeeper系统核心模型" />


    <TextView
        android:id="@+id/tvChapterName"
        style="@style/text_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvTitle"
        android:layout_marginTop="@dimen/qb_px_10"
        tools:text="开发环境" />

    <ImageView
        android:id="@+id/ivCollect"
        android:layout_width="@dimen/qb_px_30"
        android:layout_height="@dimen/qb_px_30"
        android:layout_alignTop="@+id/tvChapterName"
        android:layout_alignParentRight="true"
        android:padding="@dimen/qb_px_5"
        android:src="@drawable/ic_heart_normal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/qb_px_1"
        android:layout_below="@+id/tvChapterName"
        android:layout_marginTop="@dimen/padding"
        android:background="@color/division_line" />
</RelativeLayout>